{{>userHeader}}
<div id="dataView">
    <div id="mainDataView">
        <div id="dataHeader">
            <h2>Mi Perfil</h2>
        </div>
        <div id="personalData" class="profileContent">
            <div id="generalData" class="nodeProfile">
                <i class="far fa-3x fa-address-card"></i>
                <div class="field">
                    <span>Nombre</span>
                    <input type="text" name="nombre" id="nombre" disabled>
                </div>
                <div class="field">
                    <span>Apellidos</span>
                    <input type="text" name="apellidos" id="apellidos" disabled>
                </div>
                <div class="field">
                    <span>Nickname</span>
                    <input type="text" name="nickname" id="nickname" disabled>
                </div>
                <div class="field">
                    <span>Sexo</span>
                    <select name="sexo" id="sexo">
                        <option value=""></option>
                        <option value="hombre">Hombre</option>
                        <option value="mujer">Mujer</option>
                    </select>
                </div>
                <div id="error-sexo" class="msgError"></div>
                <div class="field">
                    <span>Edad</span>
                    <input type="text" name="edad" id="edad">
                </div>
                <div id="error-edad" class="msgError"></div>
                <div class="field">
                    <span>Email</span>
                    <input type="text" name="email" id="email">
                </div>
                <div id="error-email" class="msgError"> </div>
            </div>
            <div id="healthData" class="nodeProfile">
                <i class="fas fa-3x fa-heartbeat"></i>
                <div class="field">
                    <span>Peso</span>
                    <input type="text" name="peso" id="peso">
                </div>
                <div id="error-peso" class="msgError"></div>
                <div class="field">
                    <span>Altura</span>
                    <input type="text" name="altura" id="altura">
                </div>
                <div id="error-altura" class="msgError"> </div>
                <div class="field">
                    <span>Pulsaciones</span>
                    <input type="text" name="pulsaciones_reposo" id="pulsaciones_reposo">
                </div>
                <div id="error-pulsaciones_reposo" class="msgError"></div>
                <div id="btnsPersonalData">
                    <button id="btnPersonalData">GUARDAR</button>
                </div>
            </div>
        </div>
        <div id="appData" class="profileContent">
            <div class="nodeProfile">
                <img src="../assets/img/Run_to_Win_Logo.png" alt="">
                <div class="field">
                    <span>Tu reto</span>
                    <input type="text" name="challenge" disabled>
                </div>
                <div class="field">
                    <span>Puntuaci√≥n</span>
                    <input type="text" name="puntuacion" disabled>
                </div>
                <div class="field">
                    <span>Tu status</span>
                    <input type="text" name="status" disabled>
                </div>
            </div>
        </div>
    </div>
</div>
{{>userFooter}}